{
  "name": "livestock-club-sa-api",
  "version": "1.0.0",
  "description": "API for Livestock Club SA application",
  "scripts": {
    "start": "cross-env FUNCTIONS_WORKER_RUNTIME=node AzureWebJobsStorage=UseDevelopmentStorage=true npx -y azure-functions-core-tools@4 start --port 7072",
    "start:7073": "cross-env FUNCTIONS_WORKER_RUNTIME=node AzureWebJobsStorage=UseDevelopmentStorage=true npx -y azure-functions-core-tools@4 start --port 7073",
    "build": "node -e \"try{require('fs').rmSync('dist',{recursive:true,force:true})}catch(e){}\" && tsc",
    "watch": "tsc -w",
    "db:init:ps": "node scripts/init-db.cjs",
    "db:init:bash": "node scripts/init-db.cjs",
    "db:seed": "ts-node src/lib/db/seed.ts",
    "db:seed:ps": "powershell -ExecutionPolicy Bypass -File scripts/seed-db.ps1",
    "db:seed:bash": "bash scripts/seed-db.sh",
    "test": "vitest",
    "test:run": "vitest run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@azure/functions": "^4.0.0",
    "@types/pg": "^8.15.5",
    "papaparse": "^5.5.3",
    "pdf-lib": "^1.17.1",
    "pg": "^8.16.3",
    "typescript": "^5.0.0",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^18.0.0",
    "@vitest/ui": "^3.2.4",
    "jest": "^30.1.3",
    "ts-jest": "^29.4.4",
    "ts-node": "^10.9.2",
    "vitest": "^3.2.4"
  },
  "main": "dist/src/functions/index.js"
}
