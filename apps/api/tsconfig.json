{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "outDir": "dist",
    "rootDir": ".",
    "sourceMap": true,
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@my-farm/domain": ["../../packages/domain/src/index.ts"]
    }
  },
  "include": [
    "src/functions/index.ts",
    "src/functions/listings.ts",
    "src/functions/livestock.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/lib/**",
    "src/functions/**/!(*index|*listings|*livestock).ts"
  ]
}
