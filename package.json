{
  "name": "livestock-club-sa",
  "private": true,
  "version": "1.0.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "type": "module",
  "overrides": {
    "eslint": "^9.9.1",
    "@typescript-eslint/eslint-plugin": "^8.3.0",
    "@typescript-eslint/parser": "^8.3.0",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.11"
  },
  "scripts": {
    "dev": "vite",
    "frontend": "cd apps/frontend && npm run dev",
    "frontend:build": "cd apps/frontend && npm run build",
    "frontend:preview": "cd apps/frontend && npm run preview",
    "api": "cd apps/api && npm run start:7073",
    "api:build": "cd apps/api && npm run build",
    "api:test": "cd apps/api && npm run test:run",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "test:frontend": "vitest",
    "db:init:ps": "cd apps/api && npm run db:init:ps",
    "db:init:bash": "cd apps/api && npm run db:init:bash",
    "azure:login:ps": "powershell -ExecutionPolicy Bypass -File apps/api/scripts/azure-login.ps1",
    "azure:login:bash": "bash apps/api/scripts/azure-login.sh",
    "azure:pg:init:ps": "powershell -ExecutionPolicy Bypass -File apps/api/scripts/azure-init-db.ps1",
    "azure:setup:ps": "powershell -ExecutionPolicy Bypass -File apps/api/scripts/azure-setup-and-start.ps1",
    "azure:blob:upload:ps": "powershell -ExecutionPolicy Bypass -File apps/api/scripts/azure-blob-upload.ps1",
    "azure:pg:init:bash": "bash apps/api/scripts/azure-init-db.sh",
    "download:images": "powershell -ExecutionPolicy Bypass -File apps/api/scripts/download-images.ps1",
    "download:multiple-images": "powershell -ExecutionPolicy Bypass -File apps/api/scripts/download-multiple-images.ps1",
    "download:insects-arachnids": "powershell -ExecutionPolicy Bypass -File apps/api/scripts/download-insects-arachnids.ps1",
    "test": "cd apps/api && npm run test:run",
    "test:ui": "cd apps/api && npm run test:ui",
    "test:coverage": "cd apps/api && npm run test:coverage",
    "build:all": "npm run frontend:build && npm run api:build",
    "test:all": "npm run api:test"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "lucide-react": "^0.344.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "recharts": "^3.2.1",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^18.0.0",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@types/recharts": "^1.8.29",
    "@vitejs/plugin-react": "^4.7.0",
    "autoprefixer": "^10.4.18",
    "eslint": "^9.9.1",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.11",
    "globals": "^15.9.0",
    "jsdom": "^27.0.0",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.3.0",
    "vite": "^7.1.11",
    "vitest": "^3.2.4"
  }
}
